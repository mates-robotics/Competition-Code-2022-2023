// Right trigger manually adjusts the claw up
else if (gamepad1.right_trigger > 0.5) {
    robot.extender.setPower(armSpeed);
    robot.extender.setTargetPosition(robot.extender.getCurrentPosition());
}

// Left trigger manually adjusts the claw down
else if (gamepad1.left_trigger > 0.5 ) {
    robot.extender.setPower(-armSpeed);
    robot.extender.setTargetPosition(robot.extender.getCurrentPosition());
}

else if (gamepad1.dpad_up || gamepad2.dpad_up || gamepad1.dpad_down || gamepad2.dpad_down) {
    robot.extender.setPower(0);
    robot.extender.setTargetPosition(robot.extender.getCurrentPosition()); // Lock the current position
}
